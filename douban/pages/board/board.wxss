/* pages/board/board.wxss */
.slide swiper {
   height: 350rpx; 
}
.slide-image {
   width: 100%;
  height: 100%;  
}

.board {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
.board-item {
  display: flex;
  flex: 1;
   cursor: pointer; 
  border: 1rpx solid #eee;
  margin-top: 20rpx;
  padding: 30rpx;
}
.board-item text {
  flex: 1;
}
.board-item image {
  width: 50rpx;
  height: 50rpx;
}

.a {
  font-weight: bold;
  padding-left: 50rpx;
  padding-top: 20rpx;
  font-size: 60rpx;
}
.b {
  padding-left: 50rpx;
  padding-top: 10rpx;
  font-size: 25rpx;
}
.c {
   background-color: blue;
   color: #eee;
}
.d {
   background-color: red;
   color: #eee;
}
